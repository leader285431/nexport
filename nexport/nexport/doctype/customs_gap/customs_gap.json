{
  "name": "Customs Gap",
  "module": "NexPort",
  "doctype": "DocType",
  "document_type": "Document",
  "engine": "InnoDB",
  "naming_rule": "By \"Naming Series\" field",
  "autoname": "naming_series:",
  "fields": [
    {
      "fieldname": "naming_series",
      "fieldtype": "Select",
      "label": "Naming Series",
      "options": "GAP-.#####",
      "default": "GAP-.#####",
      "reqd": 1,
      "hidden": 1
    },
    {
      "fieldname": "basic_section",
      "fieldtype": "Section Break",
      "label": "Basic Information"
    },
    {
      "fieldname": "product",
      "fieldtype": "Link",
      "label": "Product",
      "options": "Item",
      "reqd": 1,
      "in_list_view": 1,
      "in_standard_filter": 1,
      "description": "Unique constraint: (product, shipment, po) â€” one gap per item per shipment per PO. Index added via patch."
    },
    {
      "fieldname": "shipment",
      "fieldtype": "Link",
      "label": "Shipment",
      "options": "Shipment",
      "reqd": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "po",
      "fieldtype": "Link",
      "label": "Purchase Order",
      "options": "Purchase Order",
      "reqd": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "column_break_basic",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "general_name",
      "fieldtype": "Data",
      "label": "General Name",
      "reqd": 1,
      "in_list_view": 1,
      "description": "Copied from Item.customs_name at creation"
    },
    {
      "fieldname": "status",
      "fieldtype": "Select",
      "label": "Status",
      "options": "Pending\nPartial\nResolved",
      "default": "Pending",
      "reqd": 1,
      "in_list_view": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "deadline",
      "fieldtype": "Date",
      "label": "Deadline",
      "reqd": 1
    },
    {
      "fieldname": "quantities_section",
      "fieldtype": "Section Break",
      "label": "Quantities"
    },
    {
      "fieldname": "gap_qty",
      "fieldtype": "Float",
      "label": "Gap Quantity",
      "reqd": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "column_break_quantities",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "resolved_qty",
      "fieldtype": "Float",
      "label": "Resolved Quantity",
      "default": "0",
      "in_list_view": 1
    },
    {
      "fieldname": "resolution_section",
      "fieldtype": "Section Break",
      "label": "Resolution",
      "collapsible": 1
    },
    {
      "fieldname": "resolution_ref",
      "fieldtype": "Data",
      "label": "Resolution Reference",
      "description": "Reference to the declaration that resolved this gap"
    }
  ],
  "permissions": [
    {
      "role": "System Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1
    },
    {
      "role": "NexPort Admin",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1
    },
    {
      "role": "NexPort Finance",
      "read": 1
    },
    {
      "role": "NexPort Procurement",
      "read": 1,
      "write": 1,
      "create": 1
    }
  ],
  "sort_field": "modified",
  "sort_order": "DESC",
  "track_changes": 1
}
