{
 "name": "NexPort Payment Execution",
 "module": "NexPort",
 "doctype": "DocType",
 "document_type": "Document",
 "engine": "InnoDB",
 "naming_rule": "By \"Naming Series\" field",
 "autoname": "naming_series:",
 "fields": [
  {
   "fieldname": "naming_series",
   "fieldtype": "Select",
   "label": "Naming Series",
   "options": "PAY-EX-.YYYY.-.#####",
   "default": "PAY-EX-.YYYY.-.#####",
   "reqd": 1,
   "hidden": 1
  },
  {
   "fieldname": "basic_section",
   "fieldtype": "Section Break",
   "label": "Basic Information"
  },
  {
   "fieldname": "invoice",
   "fieldtype": "Link",
   "label": "Invoice",
   "options": "Invoice",
   "reqd": 1,
   "in_list_view": 1,
   "in_standard_filter": 1
  },
  {
   "fieldname": "installment",
   "fieldtype": "Int",
   "label": "Installment Number",
   "reqd": 1,
   "in_list_view": 1
  },
  {
   "fieldname": "amount_paid",
   "fieldtype": "Currency",
   "label": "Amount Paid",
   "reqd": 1,
   "in_list_view": 1
  },
  {
   "fieldname": "payment_date",
   "fieldtype": "Date",
   "label": "Payment Date",
   "reqd": 1,
   "in_list_view": 1,
   "in_standard_filter": 1
  },
  {
   "fieldname": "column_break_basic",
   "fieldtype": "Column Break"
  },
  {
   "fieldname": "currency",
   "fieldtype": "Link",
   "label": "Currency",
   "options": "Currency",
   "reqd": 1
  },
  {
   "fieldname": "payment_method",
   "fieldtype": "Select",
   "label": "Payment Method",
   "options": "Bank Transfer\nCheck\nCash\nCredit Card\nOther"
  },
  {
   "fieldname": "details_section",
   "fieldtype": "Section Break",
   "label": "Details"
  },
  {
   "fieldname": "reference_number",
   "fieldtype": "Data",
   "label": "Reference Number",
   "description": "Check number, transaction ID, or other payment reference"
  },
  {
   "fieldname": "notes",
   "fieldtype": "Text",
   "label": "Notes"
  },
  {
   "fieldname": "exchange_rate",
   "fieldtype": "Float",
   "label": "Exchange Rate",
   "default": "1"
  },
  {
   "fieldname": "remittance_reference",
   "fieldtype": "Data",
   "label": "Remittance Reference"
  },
  {
   "fieldname": "bank_reference",
   "fieldtype": "Data",
   "label": "Bank Reference"
  },
  {
   "fieldname": "attachment",
   "fieldtype": "Attach",
   "label": "Attachment"
  },
  {
   "fieldname": "fx_variance",
   "fieldtype": "Currency",
   "label": "FX Variance",
   "read_only": 1
  },
  {
   "fieldname": "idempotency_key",
   "fieldtype": "Data",
   "label": "Idempotency Key",
   "read_only": 1,
   "unique": 1
  }
 ],
 "permissions": [
  {
   "role": "NexPort Admin",
   "read": 1,
   "write": 1,
   "create": 1,
   "delete": 1,
   "submit": 1,
   "cancel": 1
  },
  {
   "role": "NexPort Finance",
   "read": 1,
   "write": 1,
   "create": 1,
   "submit": 1
  },
  {
   "role": "System Manager",
   "read": 1,
   "write": 1,
   "create": 1,
   "delete": 1,
   "submit": 1,
   "cancel": 1
  }
 ]
}